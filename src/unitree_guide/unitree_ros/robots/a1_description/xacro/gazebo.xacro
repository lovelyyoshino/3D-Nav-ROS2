    <gazebo>
        <plugin filename="libgazebo_ros_force.so" name="gazebo_ros_force">
            <ros>
                <namespace>/a1_gazebo</namespace>
                <remapping>wrench:=/apply_force/trunk</remapping>
            </ros>
            <link_name>trunk</link_name>
        </plugin>
    </gazebo>

    <gazebo reference="imu_link">
        <gravity>true</gravity>
        <sensor name="imu_sensor" type="imu">
            <always_on>true</always_on>
            <update_rate>1000</update_rate>
            <visualize>true</visualize>
            <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
                <ros>
                    <namespace>/a1_gazebo</namespace>
                    <remapping>~/out:=trunk_imu</remapping>
                </ros>
                <initial_orientation_as_reference>false</initial_orientation_as_reference>
                <frame_name>imu_link</frame_name>
            </plugin>
            <pose>0 0 0 0 0 0</pose>
        </sensor>
    </gazebo>

    <!-- base_self position and orientation (ROS2 format). -->
    <gazebo>
        <plugin name="p3d_base_trunk_pos_vel" filename="libgazebo_ros_p3d.so">
            <ros>
                <namespace>/a1_gazebo</namespace>
                <remapping>odom:=ground_truth/base_trunk</remapping>
            </ros>
            <update_rate>100</update_rate>
            <body_name>base</body_name>
            <frame_name>trunk</frame_name>
            <xyz_offset>0 0 0</xyz_offset>
            <rpy_offset>0 0 0</rpy_offset>
        </plugin>
    </gazebo>

