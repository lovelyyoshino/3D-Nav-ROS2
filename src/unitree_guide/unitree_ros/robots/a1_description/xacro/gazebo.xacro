     <!-- gazebo livox mid360 plugins -->
    <xacro:property name="M_PI" value="3.14159"/> 
    <gazebo reference="laser_livox">
        <sensor type="ray" name="laser_livox">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <plugin name="gazebo_ros_laser_controller" filename="liblivox_laser_simulation.so">
                            <ray>
                            <scan>
                                    <horizontal>
                                    <samples>100</samples>
                                    <resolution>1</resolution>
                                    <min_angle>${0}</min_angle>
                                    <max_angle>${2*M_PI}</max_angle>
                                    </horizontal>
                                    <vertical>
                                    <samples>360</samples>
                                    <resolution>1</resolution>
                                    <min_angle>${-5.22/180*M_PI}</min_angle>
                                    <max_angle>${57.22/180*M_PI}</max_angle>
                                    </vertical>
                            </scan>
                            <range>
                                    <min>0.1</min>
                                    <max>40</max>
                                    <resolution>0.01</resolution>
                            </range>
                            <noise>
                                    <type>gaussian</type>
                                    <mean>0.0</mean>
                                    <stddev>0.005</stddev>
                            </noise>
                            </ray>
            <visualize>true</visualize>
                    <samples>24000</samples>
                    <downsample>1</downsample>
                    <csv_file_name>package://a1_description/scan_mode/mid360.csv</csv_file_name>
                    <ros_topic>/scan</ros_topic>
                    <frameName>laser_livox</frameName>
            </plugin>
        </sensor>
    </gazebo>


    <!-- gazebo livox imu-link plugins (ROS2 format) -->
